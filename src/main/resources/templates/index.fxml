<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gm.tareas.controlador.IndexControlador">
   <children>
      <Label layoutX="190.0" layoutY="40.0" text="Sistema de Tareas" textFill="#e63946">
         <font>
            <Font name="Arial Bold" size="25.0" />
         </font></Label>
      <TableView fx:id="tareaTabla" layoutX="258.0" layoutY="100.0" onMouseClicked="#cargarTareaFormulario" prefHeight="200.0" prefWidth="304.0">
        <columns>
          <TableColumn fx:id="idTareaColumna" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="nombreTareaColumna" prefWidth="75.0" text="Tarea" />
            <TableColumn fx:id="responsableColumna" prefWidth="75.0" text="Responsable" />
            <TableColumn fx:id="estatusColumna" prefWidth="75.0" text="Estatus" />
        </columns>
      </TableView>
      <AnchorPane layoutX="39.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0">
         <children>
            <Label layoutX="27.0" layoutY="14.0" text="Tarea" textFill="#457b9b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Label>
            <Label layoutX="27.0" layoutY="67.0" text="Responsable" textFill="#457b9b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Label>
            <Label layoutX="27.0" layoutY="121.0" text="Estatus" textFill="#457b9b">
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font></Label>
            <TextField fx:id="nombreTareaTexto" layoutX="26.0" layoutY="32.0" />
            <TextField fx:id="responsableTexto" layoutX="26.0" layoutY="87.0" />
            <TextField fx:id="estatusTexto" layoutX="26.0" layoutY="139.0" />
         </children></AnchorPane>
      <AnchorPane layoutX="38.0" layoutY="307.0" prefHeight="78.0" prefWidth="523.0">
         <children>
            <Button fx:id="agregarBoton" layoutX="33.0" layoutY="27.0" mnemonicParsing="false" onAction="#agregarTarea" style="-fx-background-color: #1d3557;" text="Agregar" textFill="#f1faee" />
            <Button fx:id="modificarBoton" layoutX="147.0" layoutY="27.0" mnemonicParsing="false" onAction="#modificarTarea" style="-fx-background-color: #1d3557;" text="Modificar" textFill="#f1faee" />
            <Button fx:id="eliminarBoton" layoutX="262.0" layoutY="27.0" mnemonicParsing="false" onAction="#eliminarTarea" style="-fx-background-color: #e63946;" text="Eliminar" textFill="#f1faee" />
            <Button fx:id="limpiarBoton" layoutX="385.0" layoutY="26.0" mnemonicParsing="false" onAction="#limpiarFormulario" style="-fx-background-color: #ffd60a;" text="Limpiar formulario" />
         </children></AnchorPane>
   </children>
</AnchorPane>
